################################################################################
#                               VARIABLES                                      #
################################################################################

NAME = megaphone
CPP = c++
FLAGS = -Wall -Werror -Wextra -g -pedantic -std=c++98 #-fsanitize=address
RM = rm -rf

################################################################################
#                               SOURCES                                        #
################################################################################

SRC = megaphone.cpp

################################################################################
#                               DIRECTORIES                                    #
################################################################################

D_OBJ = obj
OBJ = $(addprefix $(D_OBJ)/, $(SRC:.cpp=.o))
DEP = $(addprefix $(D_OBJ)/, $(SRC:.cpp=.d))

################################################################################
#                               BOLD COLORS                                    #
################################################################################

E = \033[m
R = \033[31m
G = \033[32m
Y = \033[33m
B = \033[34m
P = \033[35m
C = \033[36m

################################################################################
#  FONT                                                                        #
################################################################################

ligth = \033[1m
dark = \033[2m
italic = \033[3m

################################################################################
#                               MAKE RULES                                     #
################################################################################

all: dir $(NAME)

-include $(DEP)

dir:
	-mkdir $(D_OBJ)

$(D_OBJ)/%.o: %.cpp Makefile
	$(CPP) $(FLAGS) -c $< -o $@
	echo "$(ligth)$(B)file:$(E) $(ligth)$< $(B)to$(E) $(ligth)$@$(E)"

$(NAME): $(OBJ)
	$(CPP) $(FLAGS) $(OBJ) -o $(NAME)
	echo "$(B)$(ligth)Project $(NAME) compiled!$(E)"

################################################################################
#                               CLEAN                                          #
################################################################################

clean:
	$(RM) $(D_OBJ)
	echo "$(ligth)$(B)$(NAME) object files cleaned!$(E)"

fclean: clean
	$(RM) $(NAME)
	echo "$(ligth)$(B)$(NAME) executable files and name cleaned!$(E)"

re: fclean all

.SILENT:
.PHONY: all clean fclean re dir
